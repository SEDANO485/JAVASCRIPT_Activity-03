<html>
<head>
   <title>Java Script Day03</title>
</head>
<body>
             <h2>JavaScript Day03 Activity No.1</h2>
             <h3>Convert Number (1–999) to Words</h3>
  <input type="number" id="numInput" placeholder="Enter a number (1–999)" />
  <button onclick="convertToWords()">Convert</button>
  <p id="output"></p>
  <script>
function convertToWords() {
      var number = parseInt(document.getElementById("numInput").value);
     var output = document.getElementById("output");

      if (isNaN(number) || number < 1 || number > 999) {
        output.innerText = "Please enter a valid number between 1 and 999.";
        return;
      }
      var ones = ["", "One", "Two", "Three", "Four", "Five", "Six", "Seven", "Eight", "Nine"];
      var teens = ["Ten", "Eleven", "Twelve", "Thirteen", "Fourteen", "Fifteen", "Sixteen", "Seventeen", "Eighteen", "Nineteen"];
      var tens = ["", "", "Twenty", "Thirty", "Forty", "Fifty", "Sixty", "Seventy", "Eighty", "Ninety"];
      var words = "";

      // Hundreds
      if (number >= 100) {
        var hundreds = Math.floor(number / 100);
        switch (hundreds) {
          case 1: words += "One Hundred"; break;
          case 2: words += "Two Hundred"; break;
          case 3: words += "Three Hundred"; break;
          case 4: words += "Four Hundred"; break;
          case 5: words += "Five Hundred"; break;
          case 6: words += "Six Hundred"; break;
          case 7: words += "Seven Hundred"; break;
          case 8: words += "Eight Hundred"; break;
          case 9: words += "Nine Hundred"; break;
        }
        number %= 100;
        if (number > 0) {
          words += "  ";
        }
      }

      // Tens and Ones
      if (number >= 20) {
        var t = Math.floor(number / 10);
        switch (t) {
          case 2: words += "Twenty"; break;
          case 3: words += "Thirty"; break;
          case 4: words += "Forty"; break;
          case 5: words += "Fifty"; break;
          case 6: words += "Sixty"; break;
          case 7: words += "Seventy"; break;
          case 8: words += "Eighty"; break;
          case 9: words += "Ninety"; break;
        }
        var o = number % 10;
        if (o > 0) {
          words += " " + ones[o];
        }
      } else if (number >= 10) {
        words += teens[number - 10];
      } else if (number > 0) {
        words += ones[number];
      }

      output.innerText = "Output is: " + words;
    }
  </script>
</body>
</html>
